@import 'variables'

* 
  margin 0
  padding 0
 	box-sizing border-box
 	list-style none
 	text-decoration none

.home 
  background url('../images/testhome.svg')
  background-repeat no-repeat
  background-position center center
  background-size cover
  height 100vh
  display flex
  justify-content center
  align-items center
  
 	.vertical 
  	margin-right 25px 

 		h1
	  	color white
	  	text-align center
	  	font-family font
	  	font-weight 400
	  	font-size 36px

	.home-img img	
		display flex
		height 120px
		padding 10px
		
	p
		color white
		margin-left 25px
		font-family font
		font-weight 300
		font-size 20px

.menu
	position absolute
	right 40px
	top 20px
	
	div
		height 10px
		width 10px
		margin 5px
		border-radius 50%
		background white
		
.nav-menu
	background white
	height 300px
	width 200px
	position absolute
	top 80px
	right 40px
	display flex
	justify-content center
	opacity 0	
	transition all 700ms cubic-bezier(0.17, 0.04, 0.03, 0.94)
	
	ul li
		height 75px
		display flex
		justify-content center
		align-items center			
			
		a
			font-family font
			font-weight 300
			color black
			
.fade
	opacity 1
